{
  "name": "express-hypermedia",
  "version": "1.0.0",
  "description": "A library that offers the creation of hypermedia resources that works in tandem with express",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "mocha ./lib/**/*.test.js",
    "coverage": "nyc mocha ./lib/**/*.test.js",
    "testfile": "nyc mocha"
  },
  "author": "Dane Podzkiewitz",
  "dependencies": {
    "express": "^4.16.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/express": "^4.0.39",
    "@types/mocha": "^2.2.46",
    "@types/sinon": "^4.1.2",
    "chai": "^4.1.2",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "sinon": "^4.1.4"
  },
  "nyc": {
    "source-map": true,
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "**/*.test.js"
    ],
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ],
    "all": true
  }
}
